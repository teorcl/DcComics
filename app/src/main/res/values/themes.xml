<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DcComics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Todos los estilos que defina aqui deben ir orientados a el modo claro. -->

    <!-- Tema para todos los titulos. -->
    <style name="Titulos_textos">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tema para los parrafos. -->
    <style name="parrafos">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Uso de herencias en stilos (parent) tema para los parrafos. -->
    <!-- Quiero heredar todas las propiedades de parrafos y adicionar nuevas. -->
    <style name="subparrafos" parent="parrafos">
        <item name="backgroundColor">@color/teal_700</item>

    </style>


</resources>